libscorep_mpi_omp_la_SOURCES              = 
nodist_EXTRA_libscorep_mpi_omp_la_SOURCES = force_link_with_F77LD.f
libscorep_mpi_omp_la_CFLAGS               = $(AM_CFLAGS) $(OPENMP_CFLAGS)
libscorep_mpi_omp_la_CPPFLAGS             = $(common_cppflags)
libscorep_mpi_omp_la_LIBADD               = \
    $(LIB_DIR_SCOREP_MPI)libscorep_adapter_mpi_event.la     \
    libscorep_adapter_pomp_omp_event.la                     \
    $(common_libadd)                                        \
    $(external_libadd)                                      \
    $(LIB_DIR_SCOREP_MPI)libscorep_adapter_mpi_mgmt.la      \
    libscorep_adapter_pomp_omp_mgmt.la                      \
    libscorep_mpp_mpi.la                                    \
    $(LIB_DIR_SCOREP_MPI)libscorep_online_access_mpp_mpi.la \
    libscorep_thread_fork_join_omp_tpd.la                   \
    libscorep_mutex_omp.la
libscorep_mpi_omp_la_LDFLAGS              = $(external_ldflags)

endif
endif
