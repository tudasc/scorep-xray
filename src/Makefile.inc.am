    $(external_libadd)                   \
    libscorep_adapter_pomp_omp_mgmt.la   \
    libscorep_adapter_mpi_mgmt_mockup.la \
    libscorep_mpp_mockup.la              \
    libscorep_thread_fork_join_omp_tpd.la \
    libscorep_mutex_omp.la               \
    libscorep_online_access_spp.la
libscorep_omp_la_LDFLAGS  = $(external_ldflags)

if HAVE_SCOREP_OMP_ANCESTRY
